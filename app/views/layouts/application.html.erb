<!DOCTYPE html>
<html>
  <head>
    <title>AthletePreneur</title>
    
    <%= stylesheet_link_tag "fancybox/jquery.fancybox-1.3.4.css", "application" %>
    <%= javascript_include_tag :all, 'jquery', 'application' %>
    <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js", "fancybox/jquery.fancybox-1.3.4.pack.js" %>
    <%= javascript_include_tag "/javascripts/ckeditor/ckeditor.js" %>
    <%= javascript_include_tag 'rails' %>
    <%= csrf_meta_tag %>
    
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-2677869-15']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  
  </script>
    
  </head>
  <body>
    <div id="container">
      <div id="user_nav">
        <% if user_signed_in? %>
          Signed in as <%= username(current_user) %>.<br />
          Not you? <%= link_to "Sign out", destroy_user_session_path %>
        <% else %>
          <%= link_to "Sign In", authentications_path %>
        <% end %>
      </div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
